
[Unit]
Description=dutchradar-mlat
Wants=network.target
After=network.target

[Service]
User=dutchradar
RuntimeDirectory=dutchradar-mlat
ExecStart=/usr/local/share/dutchradar/dutchradar-mlat.sh
Type=simple
Restart=always
RestartSec=30
StartLimitInterval=1
StartLimitBurst=100
SyslogIdentifier=dutchradar-mlat
Nice=-1

[Install]
WantedBy=default.target
